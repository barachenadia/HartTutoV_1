<% provide(:title,'Sign up') %>

<div class="row">
<div class="small-8 columns">
	<center> 
<h1>Sign up </h1>

<%= form_for (@user) do |f| %>
<%= render 'shared/error_messages' %>
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>
	<%= f.label :email, "Email" %>
	<%= f.text_field :email %>
	<%= f.label :password, "Password" %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation, "Password _Confirmation" %>	
	<%= f.password_field :password_confirmation %>
	<%= f.submit "Create my account", :disable_with => 'Create my accounting...' %>
		
<% end %>

</center>

</div>
</div>








